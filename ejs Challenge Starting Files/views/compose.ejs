<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="\compose" method = "post">
    <div class = "form-group">
        <label for="postTitle">Title</label>
        <input class = "form-control form-control-sm" type="text" name = "postTitle" required>
    </div>
    <div class = "form-group">
        <label for="postBody">Post</label>
        <textarea name="postBody" class="form-control" rows="5" required></textarea>

    </div>
    <button type = "submit" class = "btn btn-primary"name = "button">Publish</button>
</form>


<%- include("partials/footer") -%>