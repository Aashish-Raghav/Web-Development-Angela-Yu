<%- include("header") -%>
    <div class = "box" id = "heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class = "box">
        <%listItems.forEach((element)=>{%>
            <form action="\delete" method="post">
                <div class = "item">
                    <input type="checkbox" name = "checkbox" value = "<%=element._id%>"onchange="this.form.submit()"></input>
                    <p><%=element.item%></p>
                </div>
                <input type = "hidden" name = "ListName" value = "<%= listTitle%>"></input>
            </form>
                
        <%})%>
        <form class = "item" action="/" method = "post">
            <input type="text" name="newItem" placeholder="Add item" autocomplete="off">
            <button type = "submit" name = "button" value="<%=listTitle%>">+</button>
        </form>
    </div>

<%- include("footer") -%>